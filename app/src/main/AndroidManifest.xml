<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-feature android:name="android.hardware.telephony" android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GroundOnline">

        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- User Login Activity -->
        <activity
            android:name=".UserLoginActivity"
            android:exported="false" />

        <!-- Admin Login Activity -->
        <activity
            android:name=".AdminLoginActivity"
            android:exported="false" />

        <!-- Admin Sign-Up Activity -->
        <activity
            android:name=".AdminSignUpActivity"
            android:exported="false" />

        <!-- User Sign-Up Activity -->
        <activity
            android:name=".UserSignUpActivity"
            android:exported="false" />

        <!-- User Dashboard Activity -->
        <activity
            android:name=".UserDashboardActivity"
            android:exported="false" />

        <!-- Sports Event Activity -->
        <activity
            android:name=".SportsEventActivity"
            android:exported="false" />

        <!-- Ground Booking Activity -->
        <activity
            android:name=".GroundBookingActivity"
            android:exported="false" />

        <!-- Sport Booking Activity -->
        <activity
            android:name=".SportBookingActivity"
            android:exported="false" />

        <!-- Admin Dashboard Activity -->
        <activity
            android:name=".AdminDashboardActivity"
            android:exported="false" />

        <!-- Manage Sports Events Activity -->
        <activity
            android:name=".ManageSportsEventsActivity"
            android:exported="false" />

        <!-- Event Information Upload Activity -->
        <activity
            android:name=".EventInformationUploadActivity"
            android:exported="false" />

        <!-- Manage Ground Bookings Activity -->
        <activity
            android:name=".ManageGroundBookingsActivity"
            android:exported="false" />

        <!-- View Admin Details Activity -->
        <activity
            android:name=".ViewAdminDetailsActivity"
            android:exported="false" />

        <!-- Add Ground Activity -->
        <activity
            android:name=".AddGroundActivity"
            android:exported="false" />

        <!-- Ground Details Activity -->
        <activity
            android:name=".GroundDetailsActivity"
            android:exported="false" />

        <!-- Admin Ground Registrations View Activity -->
        <activity
            android:name=".AdminSportRegistrationsView"
            android:exported="false" />
        <!-- Additional activities can be added here -->
        <activity
            android:name=".AdminGroundRegistrationsView"
            android:exported="false" />

        <activity
            android:name=".RegistrationStatusActivity"
            android:exported="false"/>

    </application>

</manifest>
